<?xml version="1.0" encoding="UTF-8"?>
<ServerManagerConfiguration>
    <ProxyGroup name="filters">
        <SourceProxy name="HelloWorld" class="ttkHelloWorld" label="TTK HelloWorld">
           <Documentation long_help="TODO" short_help="TODO">
               TODO
           </Documentation>

           <InputProperty name="Input" command="SetInputConnection">
                <ProxyGroupDomain name="groups">
                    <Group name="sources" />
                    <Group name="filters" />
                </ProxyGroupDomain>
                <DataTypeDomain name="input_type">
                    <DataType value="vtkDataSet" />
                </DataTypeDomain>
                <Documentation>TODO.</Documentation>
            </InputProperty>

            <DoubleVectorProperty name="Scale" label="Scale" command="SetScale" number_of_elements="1" default_values="1">
                <DoubleRangeDomain name="range" min="0" max="10" />
                <Documentation>The scale factor of the bounding box.</Documentation>
            </DoubleVectorProperty>

            <PropertyGroup panel_widget="Line" label="Output Options">
                <Property name="Scale" />
            </PropertyGroup>

            <!-- DEBUG -->
            <IntVectorProperty name="ThreadNumber" label="Thread Number" command="SetThreadNumber" number_of_elements="1" default_values="0" panel_visibility="advanced">
                <IntRangeDomain name="range" min="0" max="256" />
                <Documentation>The maximum number of threads (0: set to number of cores).</Documentation>
            </IntVectorProperty>
            <IntVectorProperty name="DebugLevel" label="Debug Level" command="SetDebugLevel" number_of_elements="1" default_values="2" panel_visibility="advanced">
                <IntRangeDomain name="range" min="0" max="5" />
                <Documentation>Debug level.</Documentation>
            </IntVectorProperty>
            <PropertyGroup panel_widget="Line" label="Testing">
                <Property name="ThreadNumber" />
                <Property name="DebugLevel" />
            </PropertyGroup>
            <!-- /DEBUG -->

            <Hints>
                <RepresentationType view="RenderView" type="Wireframe" />
                <Visibility replace_input="0" />
                <ShowInMenu category="TTK - Misc" />
            </Hints>
        </SourceProxy>
    </ProxyGroup>
</ServerManagerConfiguration>
