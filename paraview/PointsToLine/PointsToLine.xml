<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy
        name="PointsToLine"
        class="ttkPointsToLine"
        label="TTK PointsToLine">
      <Documentation
          long_help="TTK filter converting string arrays into int arrays"
          short_help="Converts string arrays into int arrays.">
        This filter converts an input vtkStringArray into an
        vtkIntArray to make it easier to apply Threshold on the data
        set. The correspondance between a string value and an int is
        to be stored in the output Field Data.
      </Documentation>

      <InputProperty
          name="Domain"
          label="Input Data Set"
          port_index="0"
          command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <Documentation>
          Data-set to process.
        </Documentation>
      </InputProperty>

      <StringVectorProperty
          name="InputStringArray"
          command="SetInputStringArray"
          label="Input String Array"
          number_of_elements="1"
          animateable="0"
          >
        <ArrayListDomain
            name="array_list"
            default_values="0"
            >
          <RequiredProperties>
            <Property
                name="Domain"
                function="Input"
                />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>
          Select the input string array.
        </Documentation>
      </StringVectorProperty>

      <PropertyGroup panel_widget="Line" label="Input options">
        <Property name="InputStringArray" />
      </PropertyGroup>

      <Hints>
        <ShowInMenu category="TTK - Misc" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
