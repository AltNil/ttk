
<ServerManagerConfiguration>
  <!-- This is the server manager configuration XML. It defines the interface to
       our new filter. As a rule of thumb, try to locate the configuration for
       a filter already in ParaView (in Servers/ServerManager/Resources/*.xml)
       that matches your filter and then model your xml on it -->
  <ProxyGroup name="filters">
    <SourceProxy
    name="TrackingFromFields"
    class="ttkTrackingFromFields"
    label="TTK TrackingFromFields">
      <Documentation
      long_help="TTK plugin that takes an input time-varying data set (represented
by a list of scalar fields) and which computes a tracking mesh."
      short_help="TTK plugin that takes an input time-varying data set (represented
        by a list of scalar fields) and which computes a tracking mesh.">
        TTK plugin that takes an input ensemble data set (represented
        by a list of scalar fields) and which computes various vertexwise statistics
        (PDF estimation, bounds, moments, etc.).

        See also MandatoryCriticalPoints.
      </Documentation>

      <!-- Inputs -->
      <InputProperty
      name="Input"
      command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <InputArrayDomain name="input_scalars_1" number_of_components="1">
          <Property name="Input1" function="FieldDataSelection" />
        </InputArrayDomain>
        <Documentation>
          Data-set to process.
        </Documentation>
      </InputProperty>

      <!-- Persistence filtering options -->

      <IntVectorProperty
      name="StartTimestep"
      command="SetStartTimestep"
      label="First timestep"
      number_of_elements="1"
      default_values="0">
        <Documentation>
          First timestep.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
      name="EndTimestep"
      command="SetEndTimestep"
      label="Last timestep"
      number_of_elements="1"
      default_values="-1">
        <Documentation>
          Last timestep.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
      name="Sampling"
      command="SetSampling"
      label="Sampling"
      number_of_elements="1"
      default_values="1">
        <Documentation>
          Sampling.
        </Documentation>
      </IntVectorProperty>

      <DoubleVectorProperty
      name="Tolerance"
      command="SetTolerance"
      label="Persistence threshold"
      number_of_elements="1"
      default_values="01">
        <Documentation>
          Persistence threshold.
        </Documentation>
        <DoubleRangeDomain name="range" min="0" max="100" />
      </DoubleVectorProperty>

      <DoubleVectorProperty
      name="spe"
      label="Extremal persistence scaling"
      command="SetPE"
      number_of_elements="1"
      default_values="1"
      panel_visibility="advanced">
        <DoubleRangeDomain name="spe" min="0.0" max="1.0"/>
        <Documentation>Scaling for py.</Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty
      name="sps"
      label="Saddle persistence scaling"
      command="SetPS"
      number_of_elements="1"
      default_values="1"
      panel_visibility="advanced">
        <DoubleRangeDomain name="sps" min="0.0" max="1.0"/>
        <Documentation>Scaling for px.</Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty
      name="spx"
      label="X scaling"
      command="SetPX"
      number_of_elements="1"
      default_values="1"
      panel_visibility="advanced">
        <DoubleRangeDomain name="spx" min="0.0" max="1.0"/>
        <Documentation>Scaling for x.</Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty
      name="spy"
      label="Y scaling"
      command="SetPY"
      number_of_elements="1"
      default_values="1"
      panel_visibility="advanced">
        <DoubleRangeDomain name="spy" min="0.0" max="1.0"/>
        <Documentation>Scaling for py.</Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty
      name="spz"
      label="Z scaling"
      command="SetPZ"
      number_of_elements="1"
      default_values="1"
      panel_visibility="advanced">
        <DoubleRangeDomain name="spz" min="0.0" max="1.0"/>
        <Documentation>Scaling for pz.</Documentation>
      </DoubleVectorProperty>

      <!-- Bottleneck options -->
      <StringVectorProperty
      name="n"
      label="p parameter"
      command="SetWassersteinMetric"
      number_of_elements="1"
      default_values="1">
        <Documentation>
          Value of the parameter p for the Wp (p-th Wasserstein) distance
          computation (type "inf" for the Bottleneck distance).
        </Documentation>
      </StringVectorProperty>

      <IntVectorProperty
      name="Assignment method"
      label="Assignment method"
      command="SetPVAlgorithm"
      number_of_elements="1"
      default_values="0">
        <EnumerationDomain name="enum">
          <Entry value="0" text="ttk: sparse Munkres (Wasserstein), Gabow-Tarjan (Bottleneck)"/>
          <!--<Entry value="2" text="geometric: Auction (Wasserstein), augmenting paths (Bottleneck)"/>-->
        </EnumerationDomain>
        <Documentation>
          Method for computing matchings.
        </Documentation>
      </IntVectorProperty>

      <DoubleVectorProperty
      name="alpha"
      label="Diagram blending"
      command="SetAlpha"
      number_of_elements="1"
      default_values="1"
      panel_visibility="advanced">
        <DoubleRangeDomain name="alpha" min="0.0" max="1.0"/>
        <Documentation>
          Blending coefficient for the cost evaluation of each critical point
          matching. By default (1), only distances  in
          the persistence diagrams are considered between matched critical points. When
          set to 0, only distances in the original 3D domain are considered
          between matched critical points.
        </Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty
      name="spacing"
      label="Z-Translation"
      command="SetSpacing"
      number_of_elements="1"
      default_values="1"
      panel_visibility="advanced">
        <Documentation>
          Translation on the Z axis between the output representations of the
          persistence diagrams.
        </Documentation>
      </DoubleVectorProperty>

      <IntVectorProperty
      name="Use spacing"
      command="SetUseGeometricSpacing"
      label="Force Z-translation"
      number_of_elements="1"
      default_values="0"
      panel_visibility="advanced">
        <BooleanDomain name="bool"/>
        <Documentation>
          For the translation of the second set of critical points even the
          persistence diagrams are embedded in the original domain. This is useful to
          visualize the matching between the diagrams of two 2D scalar fields.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
      name="Use auction"
      command="SetIs3D"
      label="Use auction"
      number_of_elements="1"
      default_values="0"
      panel_visibility="advanced">
        <BooleanDomain name="bool"/>
        <Documentation>
          Use 5D.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
      name="Do post-proc"
      command="SetDoPostProc"
      label="Do post-proc"
      number_of_elements="1"
      default_values="0"
      panel_visibility="advanced">
        <BooleanDomain name="bool"/>
        <Documentation>
          Do post-processing.
        </Documentation>
      </IntVectorProperty>

      <DoubleVectorProperty
      name="Post-proc threshold"
      label="Split-Merge threshold"
      command="SetPostProcThresh"
      number_of_elements="1"
      default_values="1"
      panel_visibility="advanced">
        <Documentation>
          Threshold for merging/splitting trajectories in
          connected components array.
        </Documentation>
      </DoubleVectorProperty>

      <PropertyGroup panel_widget="Line" label="Input options">
        <Property name="n" />
        <Property name="alpha" />
      </PropertyGroup>

      <PropertyGroup panel_widget="Line" label="Output options">
        <Property name="spacing" />
        <Property name="Use spacing" />
      </PropertyGroup>

      <!-- TTK internals -->
      <IntVectorProperty
      name="UseAllCores"
      label="Use All Cores"
      command="SetUseAllCores"
      number_of_elements="1"
      default_values="1" panel_visibility="advanced">
        <BooleanDomain name="bool"/>
        <Documentation>
          Use all available cores.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
      name="ThreadNumber"
      label="Thread Number"
      command="SetThreadNumber"
      number_of_elements="1"
      default_values="1" panel_visibility="advanced">
        <IntRangeDomain name="range" min="1" max="100" />
        <Documentation>
          Thread number.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty
      name="DebugLevel"
      label="Debug Level"
      command="SetdebugLevel_"
      number_of_elements="1"
      default_values="3" panel_visibility="advanced">
        <IntRangeDomain name="range" min="0" max="100" />
        <Documentation>
          Debug level.
        </Documentation>
      </IntVectorProperty>

      <PropertyGroup panel_widget="Line" label="Testing">
        <Property name="UseAllCores" />
        <Property name="ThreadNumber" />
        <Property name="DebugLevel" />
      </PropertyGroup>

      <!-- Outputs -->
      <OutputPort name="Persistence Mesh" index="2" id="port3"/>

      <Hints>
        <ShowInMenu category="TTK - Uncertain Scalar Data" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
